<!DOCTYPE html>
<html lang="ru">

<head>
    @await Html.PartialAsync("MetaPartial")
    @await Html.PartialAsync("CssPartial")
</head>

<body>
    <!-- Body Inner -->
    <div class="body-inner">
        <!-- Header -->
        <div id="topbar" class="d-none d-xl-block d-lg-block topbar-fullwidth">
            @await Html.PartialAsync("TopbarPartial")
        </div>
        <header id="header" data-fullwidth="true">
            <div class="header-inner">
                <div class="container">
                    <!--Logo-->
                    @await Html.PartialAsync("LogoPartial")
                    <!--End: Logo-->
                    <!--Navigation Resposnive Trigger-->
                    @await Html.PartialAsync("NavigationResposniveTriggerPartial")
                    <!--end: Navigation Resposnive Trigger-->
                    <!--Navigation-->
                    @await Html.PartialAsync("MenuPartial")
                    <!--end: Navigation-->
                </div>
            </div>
        </header>
        <!-- end: Header -->
        <!-- Page Content -->
        <section id="page-content" class="sidebar-right">
            <div class="container">
                <div class="row">
                    <!-- content -->
                    <div class="content col-lg-9">
                        <!-- Blog -->
                        <div id="blog" class="single-post">
                            <!-- Post single item-->
                            @RenderBody()
                            <!-- end: Post single item-->
                        </div>
                    </div>
                    <!-- end: content -->
                    <!-- Sidebar-->
                    @await Html.PartialAsync("SidebarPartial")
                    <!-- end: Sidebar-->
                </div>
            </div>
        </section>
        <!-- end: Page Content -->
        <!-- Footer -->
        @await Html.PartialAsync("FooterPartial")
        <!-- end: Footer -->
    </div>
    <!-- end: Body Inner -->
    <a id="scrollTop"><i class="icon-chevron-up"></i><i class="icon-chevron-up"></i></a>
    @await Html.PartialAsync("ScriptsPartial")
</body>

</html>