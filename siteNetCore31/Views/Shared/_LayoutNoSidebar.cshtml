<!DOCTYPE html>
<html lang="ru">

<head>
    @await Html.PartialAsync("MetaPartial")
    @await Html.PartialAsync("CssPartial")
</head>

<body>
    <div id="topbar" class="topbar-transparent topbar-fullwidth dark d-none d-xl-block d-lg-block">
        @await Html.PartialAsync("TopbarPartial")
    </div>
    <div class="body-inner">
        <header id="header" data-transparent="true" data-fullwidth="true" class="dark submenu-light">
            <div class="header-inner">
                <div class="container">
                    @await Html.PartialAsync("LogoPartial")
                    @await Html.PartialAsync("NavigationResposniveTriggerPartial")
                    @await Html.PartialAsync("MenuPartial")
                    <!--END: NAVIGATION-->
                </div>
            </div>
        </header>
        <!-- end: Header -->
        @RenderBody()
        <!-- Footer -->
        @await Html.PartialAsync("FooterPartial")
        <!-- end: Footer -->
    </div>
    <!-- end: Body Inner -->
    <!-- Scroll top -->
    <a id="scrollTop"><i class="icon-chevron-up"></i><i class="icon-chevron-up"></i></a>
    @await Html.PartialAsync("ScriptsPartial")
</body>

</html>