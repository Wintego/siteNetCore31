@model siteNetCore31.Domain.Entities.Page
@{
    Layout = "_LayoutNoSidebar";
    ViewBag.Title = Model.seoTitle;
    ViewBag.Description = Model.seoDescription;
}

<section id="page-title" data-bg-parallax="/images/pages/@Model.Image">
    <div class="container">
        <div class="page-title">
            <h1>@Model.H1</h1>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <p>@Html.Raw(Model.Text)</p>
    </div>
</section>